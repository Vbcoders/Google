        <script>
            alert("---Google---Clone---✌️")
function search(){
    var input= document.getElementById("input");
    if (input.value != ""){
    var url ="https://www.google.com/search?q="+input.value;
    window.open(url);
    }else{
     var p = document.getElementById ("indicate");
     p.innerText="Search something....";
    }
}
        </script>
